{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "dependsOrder": "sequence",
      "dependsOn": [
        "cmake-configure",
        "cmake-build"
      ]
    },
    {
      "label": "cmake-configure",
      "type": "shell",
      "command": "cmake --preset=vcpkg",
    },
    {
      "label": "cmake-build",
      "type": "shell",
      "command": "cmake --build build"
    }
  ]
}